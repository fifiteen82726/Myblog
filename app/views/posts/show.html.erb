
<%= render 'header'%>

<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>

<p>
	<strong>Content:</strong>
	<%= @post.content %>
</p>

<p>


	<% if @post.author_id != nil %>
	Created by <%= @post.author.email %>

	<% else %>
	Created by Faker
	<% end %>
</p>

<% if can? :update, @post %>  
<%= link_to "Edit", edit_post_path(@post) %>  
<% end %>  


