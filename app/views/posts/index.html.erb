</header>


<!--Post -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

     <% @posts.each do |post| %>
     <div class="post-preview">
      <a href="post.html">
        <h2 class="post-title">
         <%= post.title %>
       </h2>
       <h4>
        <%= post.content %>
        <br>
        <%= link_to 'See more...',post ,{ :class=>"btn btn primary" }%>
      </h4>
    </a>
    <!-- <p class="post-meta">Posted by <a href="#">Start Bootstrap</a> on September 24, 2014</p> -->
  </div> 
  <hr>  
  <% end %>





