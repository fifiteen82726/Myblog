                </div>
              </div>
            </div>


            <!-- Post -->
            <h1>Listing Posts</h1>






            <table>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Contet</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.content %></td>
                  <td><%= link_to 'Show', post %></td>
                  <td><%= link_to 'Edit', edit_post_path(post) %></td>
                  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </tbody>
            </table>

